<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nodomain.freeyourgadget.gadgetbridge.activities.ControlCenterv2"
    tools:showIn="@layout/activity_controlcenterv2_app_bar_main">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deviceListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:divider="@null" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar: "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/deviceListView"/>
    <TextView
        android:id="@+id/lugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NONE"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/deviceListView"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HR: "
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lugar"/>
    <TextView
        android:id="@+id/hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 P/M"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/lugar"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long/Lat: "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hr"/>
    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hr"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Time: "
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lat"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lat"
        android:layout_toRightOf="@+id/textView7"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deviceListView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/lugar"
        android:text="Nombre" />

    <TextView
        android:id="@+id/ws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceListView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/textView8"
        android:text="None" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borracho: "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/ws"
        android:layout_toRightOf="@+id/lugar"/>
    <TextView
        android:id="@+id/movement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ws"
        android:layout_toRightOf="@+id/textView10"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: "
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/movement"
        android:layout_toRightOf="@+id/lugar"/>
    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/movement"
        android:layout_toRightOf="@+id/textView11"
        android:layout_marginLeft="30dp"/>
</RelativeLayout>
